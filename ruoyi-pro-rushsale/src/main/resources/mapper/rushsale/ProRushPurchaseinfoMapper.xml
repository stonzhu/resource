            <if test="userId != null">user_id = #{userId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="purchName != null">purch_name = #{purchName},</if>
            <if test="phoneNum != null">phone_num = #{phoneNum},</if>
